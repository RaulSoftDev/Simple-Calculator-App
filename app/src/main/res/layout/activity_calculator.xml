<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
>

    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:rowCount="6"
        android:columnCount="5">

        <TextView
            android:id="@+id/result"
            style="@style/AppTheme.BotonCalculadora.Total"
            android:text="Result:"
            android:layout_gravity="fill"
            android:layout_columnWeight="0"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c_Button"
            android:tag="C"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="C"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginRight="1dp"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/del_Button"
            android:tag="del"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="D"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_marginRight="1dp"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/div_Button"
            android:tag="/"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="รท"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_Button"
            android:tag="7"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="7"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_Button"
            android:tag="8"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="8"
            android:textAlignment="center"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine_Button"
            android:tag="9"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="9"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/x_Button"
            android:tag="x"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="x"
            android:textAllCaps="false"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_marginTop="1dp"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_Button"
            android:tag="4"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="4"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_Button"
            android:tag="5"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="5"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_Button"
            android:tag="6"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="6"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/substraction_Button"
            android:tag="-"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="-"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_marginTop="1dp"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_Button"
            android:tag="1"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="1"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_Button"
            android:tag="2"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="2"
            android:textAlignment="center"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_Button"
            android:tag="3"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="3"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_Button"
            android:tag="+"
            style="@style/AppTheme.BotonCalculadora.DeepBlue"
            android:text="+"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="1dp"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dot_Button"
            android:tag="."
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="."
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero_Button"
            android:tag="0"
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="0"
            android:textAlignment="center"
            android:layout_row="5"
            android:layout_column="1"
            android:onClick="onButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal_Button"
            android:tag="="
            style="@style/AppTheme.BotonCalculadora.LightBlue"
            android:text="="
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:onClick="onButtonClick"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>